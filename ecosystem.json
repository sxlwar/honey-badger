{
    "apps": [
        {
            "name": "honey-badger",
            "script": "main.js",
            "env": {
                "COMMON_VARIABLE": "true"
            },
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],
    "cwd": "./dist",
    "deploy": {
        "production": {
            "user": "root",
            "host": ["chtoma.com"],
            "port": "22",
            "ref": "origin/master",
            "repo": "git@github.com:sxlwar/honey-badger.git",
            "path": "/blog",
            "ssh_options": "StrictHostKeyChecking=no",
            "post-deploy": "npm install && pm2 reload ecosystem.json --env production && npm run prestart:prod",
            "env": {
                "NODE_ENV": "production"
            }
        }
    }
}
